@model NLECA_Core_Newsletter_App.Models.Newsletter.ArticleModel
@{
    ViewData["Title"] = "EditArticle";
}

@section HeaderScripts {
    <script src="https://cdn.ckeditor.com/ckeditor5/19.0.0/classic/ckeditor.js"></script>
}

<h1>EditArticle</h1>

<h2>Added: @Model.DateAdded by UserId: @Model.AddedBy</h2>

<form action="UpdateArticle" method="post">
    <input type="hidden" name="newsletterId" value="@Model.NewsletterId" />
    <input type="hidden" name="articleId" value="@Model.ArticleId" />
    <input type="hidden" name="oldArticleText" value="@Model.ArticleText" />
    <input type="text" name="articleText" value="@Model.ArticleText" />
    <button type="submit">Save Changes</button>
    @*<a href="/Newsletter/EditNewsletter/?newsletterId=@Model.NewsletterId" class="btn btn-primary">Cancel</a>*@
</form>

<form action="/Newsletter/EditNewsletter" method="post">
    <input type="hidden" name="newsletterId" value="@Model.NewsletterId" />
    <button type="submit">Cancel</button>
</form>

<div style="width: 80%; margin-left: 10%;">
    <div id="editor">editor example</div>
</div>

<script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .catch(error => {
            console.error(error);
        });
</script>