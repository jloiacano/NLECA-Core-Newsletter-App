@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NLECA Newsletter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/nlecaSpinner.css" />
</head>
<body>
    <header>
        @await Component.InvokeAsync("HeaderMenu")
    </header>

    @{
        string threeHourCookie = Context.Request.Cookies["ExpiresInThreeHours"];
        bool shouldDisplaySpinner = threeHourCookie == null || Context.Request.Cookies["UseSpinner"] != null;
        string spinnerDisplay = shouldDisplaySpinner ? "display: block;" : "display: none;";
    }

    <input type="hidden" id="NotSeenInThreeHours" value="@(threeHourCookie == null ? "true" : "false")">

    <div id="nlecaSpinnerWrapper" style="@spinnerDisplay">
        <div id="nlecaSpinnerOverlay"></div>
        <div id="nlecaSpinner" role="status">
            <span id="nlecaSpinnerN" aria-hidden="true">N</span>
            <span id="nlecaSpinnerL" aria-hidden="true">L</span>
            <span id="nlecaSpinnerE" aria-hidden="true">E</span>
            <span id="nlecaSpinnerC" aria-hidden="true">C</span>
            <span id="nlecaSpinnerA" aria-hidden="true">A</span>
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        @await Component.InvokeAsync("Footer")

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/JSDateHelpers.js" asp-append-version="true"></script>
    <script src="~/js/NLECASpinner.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
